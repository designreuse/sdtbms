	}
	
	private Contract getLastContract(Set<Contract> contracts) {
		Contract c = null;
		for(Contract tc: contracts){
			if(c == null)
				c = tc;
			else{
				if(tc.getStatus().equals("A")){
					if(tc.getEnddate().getTime() > c.getEnddate().getTime()){
						c = tc;
					}
				}
			}
		}
		return c;
	}

	private String toStr(Object obj){
		if(obj == null)
			return "";
		return obj.toString();
	}

